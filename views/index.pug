extends includes/layout.pug
block content 
     main.section 
            header.section-header 
                h1.text-3xl.font-bold.text-center.p-10 CHECK WEATHER
                button.bg-red-400.px-4.py-2.shadow-sm.rounded-xl.w-max.text-white.font-bold(id="geo-button") Get your location
            section    
                if data 
                    -var { placeName,coords,main } = data
                    -const { temp,temp_min,temp_max } = main
                    .flex.flex-col 
                        h2 #{placeName}
                        .flex 
                            h1.flex 
                                span.uppercase longitude 
                                span.text-gray-400.ml-4 #{coords.lon.toFixed(2)}
                            h1.flex.ml-5 
                                span.uppercase latitude 
                                span.text-gray-400.ml-4 #{coords.lat.toFixed(2)}
                        .flex 
                            h1.uppercase.text-2xl.tocelcius #{temp}&deg;C
